<Window x:Class="TktCouponCodeGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TktCouponCodeGenerator"
        mc:Ignorable="d"
        FontFamily="Yu Gothic"
        Title="MainWindow" Height="260" Width="600">
    <Grid>
        <Button
            x:Name="runButton"
            Content="実行"
            HorizontalAlignment="Center"
            Margin="0,167,0,0"
            VerticalAlignment="Top"
            Height="40"
            Width="100"
            Click="RunButton_Click"
            IsEnabled="False"
        />
        <TextBox
            x:Name="emailTextBox"
            HorizontalAlignment="Left"
            Margin="114,34,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="430"
            Height="20"
            TextChanged="emailTextBox_TextChanged"/>
        <Label 
            Content="メールアドレス："
            HorizontalAlignment="Left"
            Margin="10,29,0,0"
            VerticalAlignment="Top"
            Width="130"
            Height="40"/>
        <PasswordBox
            x:Name="passwordBox"
            HorizontalAlignment="Left"
            Margin="114,73,0,0"
            VerticalAlignment="Top"
            Width="430"
            Height="20"
            PasswordChanged="passwordBox_PasswordChanged"/>
        <Label 
            Content="パスワード："
            HorizontalAlignment="Left"
            Margin="10,67,0,0"
            VerticalAlignment="Top"
            Width="126"
            Height="40"/>
        <Label 
            Content="クーポンファイル："
            HorizontalAlignment="Left"
            Margin="10,112,0,0"
            VerticalAlignment="Top"
            Width="126"
            Height="40"/>
        <Button
            Content="ファイルを選択"
            HorizontalAlignment="Left"
            Margin="126,116,0,0"
            VerticalAlignment="Top"
            Height="23"
            Width="111"
            Click="SelectFileButton_Click"
        />
        <TextBox
            x:Name="inputFileNameTextBox"
            HorizontalAlignment="Left"
            Margin="266,118,0,0"
            VerticalAlignment="Top"
            Width="293"
            Height="19"
            IsEnabled="False"
            TextChanged="inputFileNameTextBox_TextChanged"/>
    </Grid>
</Window>
